        <Label Content="检测机制未编写/不可用" HorizontalAlignment="Left" Height="36" Margin="51,73,0,0" VerticalAlignment="Top" Width="237" Cursor="ScrollS" FontFamily="Century Gothic" FontWeight="Bold" FontSize="11"/>
        <Button Content="数学" HorizontalAlignment="Left" Height="53" Margin="18,131,0,0" VerticalAlignment="Top" Width="60" Click="StartMath"/>
        <Button Content="语文" HorizontalAlignment="Left" Height="53" Margin="90,131,0,0" VerticalAlignment="Top" Width="60"/>
