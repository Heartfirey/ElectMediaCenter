        <Image Margin="18,68,0,0" Source="112.jpg" Stretch="Fill" HorizontalAlignment="Left" Width="28" Height="30" VerticalAlignment="Top"/>
        <Button Content="Settings" HorizontalAlignment="Left" Height="23" Margin="45,106,0,0" VerticalAlignment="Top" Width="69" Grid.Column="1" Click="Boot_SettingWindows"/>
